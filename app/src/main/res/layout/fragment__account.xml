<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".work.fragment_account">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/img_user"
                    android:src="@drawable/ic_user1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_alignParentTop="true"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_user_mail"
                    android:layout_below="@+id/txt_user_name"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_toRightOf="@+id/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_user_more"
                    android:src="@drawable/more_than_50px"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/card_user_coupon_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/img_user_coupon"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_voucher"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/img_user_coupon"
                            android:text="Mã giảm giá"
                            android:textColor="@android:color/black"/>

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/img_user_coupon_more"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/more_than_50px"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/card_user_manage_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/img_user_manage"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_qdonhang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/img_user_manage"
                            android:text="Quản lý đơn hàng"
                            android:textColor="@android:color/black"/>

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/img_user_manage_more"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/more_than_50px"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/card_user_product_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/img_user_product"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_sanphamdamua"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/img_user_product"
                            android:text="Sản phẩm đã mua"
                            android:textColor="@android:color/black"/>

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/img_user_product_more"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/more_than_50px"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/card_user_history_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/img_user_history"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_money"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/img_user_history"
                            android:text="Lịch sử mua hàng"
                            android:textColor="@android:color/black"/>

                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/img_user_history_more"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:src="@drawable/more_than_50px"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/card_user_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/img_user_logout"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/exit_24px" />

                        <TextView
                            android:id="@+id/txt_user_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/img_user_logout"
                            android:text="Đăng xuất"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>