<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView_product_home"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"

        >


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_product_item"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:src="@drawable/iphone11" />

            <TextView
                android:id="@+id/txt_producttitle_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_product_item"
                android:text="iPhone 11 64GB"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_productprice_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_producttitle_item"
                android:layout_marginTop="10dp"
                android:text="19.990.000 VND"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/giamGia_phone_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_productprice_item"
                android:text="Giảm: "
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_productcoupon_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_productprice_item"
                android:layout_toRightOf="@id/giamGia_phone_home"

                android:text="1.500.000 VND"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_productInfor_item"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_productcoupon_item"

                android:layout_marginTop="5dp"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="5sp"
                android:scrollbars="vertical"
                android:text="Màn hình :828 x 1792 Pixels 6.1 inchs, Camera :Dual 12MP Ultra Wide and Wide cameras 12.0 MP, RAM :4 GB, CPU :Apple A13 Bionic"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>