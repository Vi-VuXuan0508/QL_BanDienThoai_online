<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".kien.Login.ListUserActivity"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:padding="8dp"
    >
    <EditText
        android:id="@+id/txtOldPass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Old Pass"
        android:inputType="textPassword"
        android:background="@drawable/white_boarder"
        />
    <EditText
        android:id="@+id/txtNewPass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="New Pass"
        android:inputType="textPassword"
        android:background="@drawable/white_boarder"
        android:layout_marginTop="8dp"
        />

    <!--    <EditText-->
    <!--        android:id="@+id/txtResetNewPass"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="48dp"-->
    <!--        android:hint="Reset New Pass"-->
    <!--        android:background="@drawable/white_boarder"-->
    <!--        android:layout_marginTop="8dp"-->
    <!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="Change Pass"
            />

        <Button
            android:id="@+id/btnCancelChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            />
    </LinearLayout>

</LinearLayout>