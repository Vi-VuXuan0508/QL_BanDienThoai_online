<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:padding="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">


            <ImageView
                android:id="@+id/ivHinhCategoryThem"
                android:src="@drawable/picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/tvCategoryThem"/>
            <TextView
                android:id="@+id/tvCategoryThem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Thêm Hãng Điện Thoại"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ivHinhCategoryThem"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <EditText
                    android:id="@+id/txtNameCategoryThem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên Hãng"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btnCategoryThem"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:text="Thêm Hãng"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/button_border"/>

                </RelativeLayout>
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

</androidx.cardview.widget.CardView>