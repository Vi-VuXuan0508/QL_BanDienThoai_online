<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_manager_title"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="8dp"
                android:text="Title"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tên"
                    android:textSize="14dp"
                    android:textColor="#939393"


                    />
                <TextView
                    android:id="@+id/txt_manager_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Người Nhận"
                    android:textSize="14dp"
                    android:textColor="#000000"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Địa Chỉ"
                    android:textSize="14dp"
                    android:textColor="#939393"


                    />
                <TextView
                    android:id="@+id/txt_manager_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Người Nhận"
                    android:textSize="14dp"
                    android:layout_weight="3"
                    android:textColor="#000000"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Điện Thoại"
                    android:textSize="14dp"
                    android:textColor="#939393"


                    />
                <TextView
                    android:id="@+id/txt_manager_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Người Nhận"
                    android:textSize="14dp"
                    android:textColor="#000000"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:id="@+id/txt_manager_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điện Thoại"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:layout_weight="0"
                    />
                <TextView
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:layout_weight="0"
                    />
                <TextView

                    android:id="@+id/txt_manager_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13dp"
                    android:textColor="#D20000"
                    android:textStyle="bold"
                    android:layout_weight="0"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đã Mua Hàng"
                    android:textSize="12dp"
                    android:textColor="#2B95CE"
                    android:textAlignment="textEnd"
                    android:layout_weight="0"

                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>