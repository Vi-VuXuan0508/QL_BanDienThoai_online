<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".work.DetailProduct"
    >

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/appbarlayout"
        android:elevation="4dp"
        android:background="@drawable/gradient_bg"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <include
            android:id="@+id/toolbarproductdetail"
            layout="@layout/toolbar_activities"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="#B5B0B0"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/img_detail"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/iphone11"/>
                    <TextView
                        android:id="@+id/txt_producttitle_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="iPhone 11 64GB"

                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_productprice_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#DF0000"
                        android:text="fdsafesa"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/txt_productpricecoupon_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:text="fdsaf"
                        android:textSize="14dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Sản Phẩm Tương Tự"

                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_product_detail"

                        android:layout_marginTop="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông Tin Sản Phẩm"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#EAEAEA"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Màn Hình"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_srceen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Màn Hình"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Camera sau"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_camera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Camera sau"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#EAEAEA"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Camera Selfie"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_cameraselfie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Camera Selfie"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RAM"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_ram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ram"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#EAEAEA"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textDirection="inherit">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bộ nhớ trong"
                        android:textSize="15dp"
                        android:layout_weight="2"
                        android:textColor="#606060"
                        />
                    <TextView
                        android:id="@+id/txt_detail_rom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rom"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="#606060"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CPU"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_cpu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CPU"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#EAEAEA"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textDirection="inherit">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GPU"
                        android:textSize="15dp"
                        android:layout_weight="2"
                        android:textColor="#606060"
                        />
                    <TextView
                        android:id="@+id/txt_detail_gpu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="gpu"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="#606060"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dung lượng pin"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pin"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#EAEAEA"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thẻ sim"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_sim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sim"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hệ điều hành"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_hedieuhanh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hệ Điều Hành"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#EAEAEA"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Xuất xứ"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_origin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="xuất xứ"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F5F5F5"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textDirection="inherit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Năm sản xuất"
                            android:textSize="15dp"
                            android:layout_weight="2"
                            android:textColor="#606060"
                            />
                        <TextView
                            android:id="@+id/txt_detail_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Năm"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:textColor="#606060"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:id="@+id/btn_detail_insert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_bg"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/ingcart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_cart"/>
                        <TextView
                            android:layout_toRightOf="@+id/ingcart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#888383"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:text="thêm vào giỏ hàng"/>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>